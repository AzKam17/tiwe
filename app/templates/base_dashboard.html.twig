<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="turbo-refresh-method" content="morph">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Dashboard{% endblock %}</title>
    {% block stylesheets %}
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <link href="{{ asset("https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css") }}" rel="stylesheet">
    {% endblock %}
    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
        <script src="{{ asset('https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js') }}" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    {% endblock %}
</head>
<body>

<div class="container-fluid">
    <div class="row">

        {# Left Sidebar Partial #}
        <div class="col-2 bg-light vh-100">
                {% include '_partials/_sidebar.html.twig' %}
        </div>

        {# Main Content Area #}
        <div class="col-10 p-4">
            <turbo-frame id="main-content-frame">
            {% block body %}{% endblock %}
            </turbo-frame>
        </div>
    </div>
</div>
</body>
</html>
