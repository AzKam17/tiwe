{# templates/dashboard/products/_table.html.twig #}

<table class="table table-striped table-bordered">
    <thead>
    <tr>
        <th>ID</th>
        <th>Titre</th>
        <th>Catégorie</th>
        <th>Créé par</th>
        <th>Description</th>
        <th>Stock</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for product in products %}
        <tr>
            <td>{{ product.id }}</td>
            <td>{{ product.title }}</td>
            <td>{{ product.category ? product.category.title : '—' }}</td>
            <td>{{ product.createdBy ? product.createdBy.email : '—' }}</td>
            <td>{{ product.description|u.truncate(50, '…') }}</td>
            <td>{{ product.stock }}</td>
            <td>
                <a href="#" class="btn btn-sm btn-info">Voir</a>
                <a href="#" class="btn btn-sm btn-warning">Éditer</a>
                {#{{ include('dashboard/products/_delete_form.html.twig', {product: product}) }}#}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="7" class="text-center">Aucun produit trouvé</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
