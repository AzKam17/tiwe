{# templates/dashboard/products/_table.html.twig #}

{% if products|length > 0 %}
    <div class="card shadow-sm rounded">
        <div class="card-header fw-bold d-flex justify-content-between align-items-center">
            <span>
                <i class="bi bi-box-seam me-1"></i> Mes produits
            </span>
            <span class="badge bg-primary rounded-pill">{{ products|length }}</span>
        </div>

        <div class="card-body p-0">
            <table class="table mb-0 table-outer-border">
                <thead class="bg-light">
                <tr>
                    <th><i class="bi bi-hash me-1"></i> ID</th>
                    <th><i class="bi bi-tag-fill me-1"></i> Titre</th>
                    <th><i class="bi bi-list-ul me-1"></i> Catégorie</th>
                    <th><i class="bi bi-person-circle me-1"></i> Créé par</th>
                    <th><i class="bi bi-card-text me-1"></i> Description</th>
                    <th><i class="bi bi-box2-fill me-1"></i> Stock</th>
                    <th><i class="bi bi-cash-coin me-1"></i> Prix</th>
                    <th><i class="bi bi-gear me-1"></i> Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td><strong>#{{ product.id }}</strong></td>
                        <td>{{ product.title }}</td>
                        <td>{{ product.category ? product.category.title : '—' }}</td>
                        <td>{{ product.createdBy ? product.createdBy.email : '—' }}</td>
                        <td>{{ product.description|u.truncate(20, '…') }}</td>
                        <td>{{ product.stock }}</td>
                        <td><strong>{{ product.price|number_format(2, ',', ' ') }} FCFA</strong></td>
                        <td class="d-flex gap-2">
                            <a href="#" class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1">
                                <i class="bi bi-eye"></i> Voir
                            </a>
                            <a href="#" class="btn btn-sm btn-outline-warning d-flex align-items-center gap-1">
                                <i class="bi bi-pencil-square"></i> Éditer
                            </a>
                            {# {{ include('dashboard/products/_delete_form.html.twig', {product: product}) }} #}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% else %}
    <div class="card text-center shadow-sm p-4 rounded">
        <div class="card-body">
            <i class="bi bi-box-seam fs-1 mb-3"></i>
            <h5 class="card-title">Aucun produit trouvé</h5>
            <p class="card-text text-muted">
                Vous n’avez encore ajouté aucun produit. Commencez dès maintenant pour alimenter votre boutique !
            </p>
            <a href="#" class="btn btn-outline-primary d-flex align-items-center gap-1">
                <i class="bi bi-plus-circle"></i> Ajouter un produit
            </a>
        </div>
    </div>
{% endif %}
