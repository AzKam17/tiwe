{% if orders|length > 0 %}
    <div class="card shadow-sm rounded">
        <div class="card-header fw-bold d-flex justify-content-between align-items-center">
            <span><i class="bi bi-basket3 me-1"></i> Mes commandes</span>
            <span class="badge bg-primary rounded-pill">{{ orders|length }}</span>
        </div>

        <div class="card-body p-0">
            <table class="table mb-0 table-outer-border">
                <thead class="bg-light">
                <tr>
                    <th><i class="bi bi-hash me-1"></i>ID</th>
                    <th><i class="bi bi-calendar-event me-1"></i> Date</th>
                    <th><i class="bi bi-info-circle me-1"></i> Status</th>
                    <th class="text-end"><i class="bi bi-currency-euro me-1"></i> Montant</th>
                    <th class="text-end"><i class="bi bi-coin me-1"></i> Frais</th>
                    <th class="text-end"><i class="bi bi-basket me-1"></i> Total</th>
                </tr>
                </thead>
                <tbody>
                {% for order in orders %}
                    <tr>
                        <td>
                            <a class="text-muted" href="{{ path('app_auth_purchases_details', {id: order.id}) }}">
                                <strong>#{{ order.slug }}</strong>
                            </a>
                        </td>
                        <td><i class="bi bi-calendar3 me-1"></i> {{ order.createdAt|date('d/m/Y H:i') }}</td>
                        <td>
                            <span class="badge rounded-pill {{ order.status|order_status_badge }}">
                                <i class="bi {{ order.status.name|status_icon }}"></i>
                                {{ order.status | order_status_lib }}
                            </span>
                        </td>
                        <td class="text-end">{{ order.amount|number_format(2, ',', ' ') }} €</td>
                        <td class="text-end">{{ order.fees|number_format(2, ',', ' ') }} €</td>
                        <td class="text-end"><strong>{{ order.totalAmount|number_format(2, ',', ' ') }} €</strong></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% else %}
    <div class="card text-center shadow-sm p-3 rounded" style="max-width: 400px; margin: 0 auto;">
        <div class="card-body">
            <i class="bi bi-cart-x fs-2 mb-2"></i>
            <h6 class="card-title mb-2">Aucune commande pour le moment</h6>
            <p class="card-text text-muted mb-3 small">
                Vous n'avez encore passé aucune commande. Explorez les offres et faites vos premiers achats !
            </p>
            <a href="#" class="btn btn-sm btn-outline-primary d-flex align-items-center gap-1 justify-content-center">
                <i class="bi bi-bag-plus"></i> Commencer à commander
            </a>
        </div>
    </div>
{% endif %}
