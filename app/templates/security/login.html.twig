{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <div class="row justify-content-center">
        <div class="col-md-5">
            <form method="post" class="p-4 border rounded shadow-sm bg-light d-flex flex-column gap-3">
                {% if error %}
                    <div class="alert alert-danger d-flex align-items-center gap-2">
                        <i class="bi bi-exclamation-triangle-fill"></i>
                        <span>{{ error.messageKey|trans(error.messageData, 'security') }}</span>
                    </div>
                {% endif %}

                {% if app.user %}
                    <div class="alert alert-info d-flex justify-content-between align-items-center">
                    <span>
                        <i class="bi bi-person-circle"></i>
                        You are logged in as <strong>{{ app.user.userIdentifier }}</strong>
                    </span>
                        <a href="{{ path('app_logout') }}" class="btn btn-sm btn-outline-danger">
                            <i class="bi bi-box-arrow-right"></i> Logout
                        </a>
                    </div>
                {% endif %}

                <h1 class="h4 text-center text-primary">
                    <i class="bi bi-shield-lock-fill"></i> Se connecter
                </h1>

                <div class="form-floating">
                    <input type="text" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                    <label for="username">
                        <i class="bi bi-person-fill"></i> Nom d'utilisateur
                    </label>
                </div>

                <div class="form-floating">
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                    <label for="password">
                        <i class="bi bi-key-fill"></i> Mot de passe
                    </label>
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary w-100 d-flex align-items-center justify-content-center gap-2" type="submit">
                    Connexion
                    <i class="bi bi-box-arrow-in-right"></i>
                </button>
            </form>
        </div>
    </div>
{% endblock %}
