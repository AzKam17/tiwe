{% extends 'base_auth_full.html.twig' %}

{% block title %}Complétez votre profil{% endblock %}

{% block body %}
    <div class="text-center mb-3">
        <i class="bi bi-person-circle text-primary" style="font-size: 2.5rem;"></i>
        <h5 class="mt-2 mb-1">Bienvenue !</h5>
        <p class="text-muted small mb-0">Complétez votre profil pour continuer</p>
    </div>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mb-3 py-2" role="alert">
                <i class="bi bi-{% if label == 'success' %}check-circle{% elseif label == 'error' or label == 'danger' %}exclamation-triangle{% else %}info-circle{% endif %} me-2"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, { attr: { class: 'd-flex flex-column gap-2', 'data-turbo': 'false' } }) }}

    {# Personal Information Card #}
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-light border-0 py-2">
            <h6 class="mb-0 small">
                <i class="bi bi-person-badge me-2"></i>
                Informations personnelles
            </h6>
        </div>
        <div class="card-body py-3">
            <div class="row g-2">
                <div class="col-md-6">
                    <div class="form-floating">
                        {{ form_widget(form.firstName, { attr: { class: 'form-control', placeholder: 'Prénom' } }) }}
                        <label for="{{ form.firstName.vars.id }}">
                            <i class="bi bi-person me-1"></i> Prénom
                        </label>
                    </div>
                    {{ form_errors(form.firstName) }}
                </div>
                <div class="col-md-6">
                    <div class="form-floating">
                        {{ form_widget(form.lastName, { attr: { class: 'form-control', placeholder: 'Nom' } }) }}
                        <label for="{{ form.lastName.vars.id }}">
                            <i class="bi bi-person me-1"></i> Nom
                        </label>
                    </div>
                    {{ form_errors(form.lastName) }}
                </div>
            </div>
        </div>
    </div>

    {# Role Selection Card #}
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-light border-0 py-2">
            <h6 class="mb-0 small">
                <i class="bi bi-briefcase me-2"></i>
                Votre profil professionnel
            </h6>
        </div>
        <div class="card-body py-3">
            <p class="text-muted small mb-2">Choisissez votre rôle sur la plateforme</p>

            <div class="row g-2 mb-3">
                <div class="col-4">
                    <div class="text-center p-2 border rounded">
                        <i class="bi bi-flower1 text-success fs-3"></i>
                        <div class="small fw-semibold mt-1">Planteur</div>
                    </div>
                </div>

                <div class="col-4">
                    <div class="text-center p-2 border rounded">
                        <i class="bi bi-people-fill text-primary fs-3"></i>
                        <div class="small fw-semibold mt-1">Coopérative</div>
                    </div>
                </div>

                <div class="col-4">
                    <div class="text-center p-2 border rounded">
                        <i class="bi bi-truck text-warning fs-3"></i>
                        <div class="small fw-semibold mt-1">Fournisseur</div>
                    </div>
                </div>

                <div class="col-4">
                    <div class="text-center p-2 border rounded">
                        <i class="bi bi-shop text-info fs-3"></i>
                        <div class="small fw-semibold mt-1">Revendeur</div>
                    </div>
                </div>

                <div class="col-4">
                    <div class="text-center p-2 border rounded">
                        <i class="bi bi-gear-fill text-secondary fs-3"></i>
                        <div class="small fw-semibold mt-1">Transformateur</div>
                    </div>
                </div>

                <div class="col-4">
                    <div class="text-center p-2 border rounded">
                        <i class="bi bi-cart-check-fill text-danger fs-3"></i>
                        <div class="small fw-semibold mt-1">Acheteur</div>
                    </div>
                </div>
            </div>

            <div class="form-floating">
                {{ form_widget(form.attachedRoles, { attr: { class: 'form-select' } }) }}
                <label for="{{ form.attachedRoles.vars.id }}">
                    <i class="bi bi-briefcase me-1"></i> Sélectionnez votre rôle
                </label>
            </div>
            {{ form_errors(form.attachedRoles) }}
        </div>
    </div>

    <button class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center gap-2" type="submit">
        <i class="bi bi-check-circle"></i>
        Finaliser mon inscription
    </button>

    <p class="text-center text-muted small mt-2 mb-0">
        En vous inscrivant, vous acceptez nos conditions d'utilisation
    </p>

    {{ form_end(form) }}
{% endblock %}
