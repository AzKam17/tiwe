{% extends 'base_auth_full.html.twig' %}

{% block title %}Choisissez votre mot de passe{% endblock %}

{% block body %}
    <div class="text-center mb-3">
        <i class="bi bi-shield-lock text-primary" style="font-size: 2.5rem;"></i>
        <h5 class="mt-2 mb-1">Bonjour {{ firstName }} !</h5>
        <p class="text-muted small mb-0">Définissez votre mot de passe pour sécuriser votre compte</p>
    </div>

    {# Flash messages #}
    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }} alert-dismissible fade show mb-3 py-2" role="alert">
                <i class="bi bi-{% if label == 'success' %}check-circle{% elseif label == 'error' or label == 'danger' %}exclamation-triangle{% else %}info-circle{% endif %} me-2"></i>
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form, { attr: { class: 'd-flex flex-column gap-2', autocomplete: 'off' } }) }}

    {# Password Security Card #}
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-light border-0 py-2">
            <h6 class="mb-0 small">
                <i class="bi bi-key me-2"></i>
                Sécurisez votre compte
            </h6>
        </div>
        <div class="card-body py-3">
            {# Password field #}
            <div class="mb-3">
                <div class="form-floating">
                    {{ form_widget(form.password.first, { attr: { class: 'form-control', placeholder: 'Mot de passe', id: 'password-input' } }) }}
                    <label for="{{ form.password.first.vars.id }}">
                        <i class="bi bi-lock me-1"></i> Mot de passe
                    </label>
                </div>
                {{ form_errors(form.password.first) }}
            </div>

            {# Confirm password field #}
            <div class="mb-3">
                <div class="form-floating">
                    {{ form_widget(form.password.second, { attr: { class: 'form-control', placeholder: 'Confirmez le mot de passe' } }) }}
                    <label for="{{ form.password.second.vars.id }}">
                        <i class="bi bi-lock-fill me-1"></i> Confirmez le mot de passe
                    </label>
                </div>
                {{ form_errors(form.password.second) }}
            </div>

            {# Password Requirements #}
            <div class="alert alert-light border mb-0">
                <div class="small fw-semibold mb-2">
                    <i class="bi bi-info-circle me-1"></i>
                    Votre mot de passe doit contenir :
                </div>
                <ul class="small mb-0 ps-3">
                    <li class="text-muted">Au moins 6 caractères</li>
                    <li class="text-muted">Une combinaison de lettres et chiffres (recommandé)</li>
                    <li class="text-muted">Des caractères spéciaux pour plus de sécurité (optionnel)</li>
                </ul>
            </div>
        </div>
    </div>

    <button class="btn btn-primary btn-lg w-100 d-flex align-items-center justify-content-center gap-2" type="submit">
        <i class="bi bi-check-circle"></i>
        Enregistrer le mot de passe
    </button>

    <div class="text-center mt-3">
        <small class="text-muted">
            <i class="bi bi-shield-check me-1"></i>
            Vos données sont sécurisées et chiffrées
        </small>
    </div>

    {{ form_end(form) }}
{% endblock %}
