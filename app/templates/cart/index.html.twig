{# templates/cart/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    {% set cart = app.session.get('cart', []) %}

    <div class="row">
        {# Left column: total + actions #}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Résumé du panier</h5>

                    {% if cart is empty %}
                        <p>Votre panier est vide.</p>
                    {% else %}
                        {% set total = 0 %}
                        {% for item in cart %}
                            {% set total = total + (item.price * item.quantity) %}
                        {% endfor %}

                        <p class="fs-5">
                            Total : <strong>{{ total }} €</strong>
                        </p>

                        <a href="#" class="btn btn-success w-100 mb-2">Passer la commande</a>
                        <a href="#" class="btn btn-secondary w-100">Continuer mes achats</a>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Right column: cart items #}
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Articles dans votre panier</h5>

                    {% if cart is empty %}
                        <p>Votre panier est vide.</p>
                    {% else %}
                        <ul class="list-group">
                            {% for item in cart %}
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <div class="d-flex align-items-center">
                                        <img src="https://picsum.photos/60/60?random={{ item.id|default(loop.index) }}"
                                             alt="{{ item.title }}"
                                             class="me-3 rounded">

                                        <div>
                                            <strong>{{ item.title }}</strong><br>
                                            <small class="text-muted">{{ item.category|default('Sans catégorie') }}</small>
                                        </div>
                                    </div>

                                    <div class="text-end">
                                        {{ item.quantity }} × {{ item.price }} € <br>
                                        <strong>{{ item.quantity * item.price }} €</strong>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
