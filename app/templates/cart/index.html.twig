{# templates/cart/index.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Mon Panier{% endblock %}

{% block body %}
    {% set cart = app.session.get('cart', []) %}

    <div class="row">
        {# Left column: total + actions #}
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Résumé du panier</h5>

                    {% if cart is empty %}
                        <p>Votre panier est vide.</p>
                    {% else %}
                        {% set total = 0 %}
                        {% for item in cart %}
                            {% set total = total + (item.price * item.quantity) %}
                        {% endfor %}

                        <p class="fs-5">
                            Total : <strong>{{ total|number_format(0, '.', ' ') }} FCFA</strong>
                        </p>

                        {% if app.user %}
                            <a href="{{ path('app_cart_confirm') }}" class="btn btn-success w-100 mb-2">
                                Passer la commande
                            </a>
                        {% else %}
                            <a href="{{ path('app_security_login') }}" class="btn btn-warning w-100 mb-2">
                                Connectez-vous pour commander
                            </a>
                        {% endif %}

                        <a href="{{ path('app_home') }}" class="btn btn-secondary w-100">
                            Continuer mes achats
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>

        {# Right column: cart items #}
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">Articles dans votre panier</h5>

                    {% if cart is empty %}
                        <p>Votre panier est vide.</p>
                    {% else %}
                        <ul class="list-group">
                            {% for item in cart %}
                                <li class="list-group-item">
                                    <div class="row align-items-center">
                                        <div class="col-auto">
                                            {% if item.image %}
                                                <img src="{{ item.image }}"
                                                     alt="{{ item.productTitle is defined ? item.productTitle : item.title }}"
                                                     class="rounded"
                                                     style="width: 80px; height: 80px; object-fit: cover;">
                                            {% else %}
                                                <div class="bg-light rounded d-flex align-items-center justify-content-center"
                                                     style="width: 80px; height: 80px;">
                                                    <i class="bi bi-box-seam text-muted" style="font-size: 2rem;"></i>
                                                </div>
                                            {% endif %}
                                        </div>

                                        <div class="col">
                                            <h6 class="mb-1">{{ item.productTitle is defined ? item.productTitle : item.title }}</h6>
                                            {% if item.supplierName is defined %}
                                                <small class="text-muted d-block">
                                                    <i class="bi bi-person me-1"></i>
                                                    Fournisseur: {{ item.supplierName }}
                                                </small>
                                            {% endif %}
                                            {% if item.category is defined %}
                                                <small class="text-muted">{{ item.category }}</small>
                                            {% endif %}
                                        </div>

                                        <div class="col-auto text-end">
                                            <div class="mb-1">
                                                <small class="text-muted d-block">Quantité</small>
                                                <strong>{{ item.quantity }} {{ item.measurementUnit|default('unité') }}</strong>
                                            </div>
                                            <div class="mb-1">
                                                <small class="text-muted d-block">Prix unitaire</small>
                                                <strong>{{ item.price|number_format(0, '.', ' ') }} FCFA</strong>
                                            </div>
                                            <div>
                                                <small class="text-muted d-block">Total</small>
                                                <strong class="text-primary fs-5">{{ (item.quantity * item.price)|number_format(0, '.', ' ') }} FCFA</strong>
                                            </div>
                                        </div>

                                        <div class="col-auto">
                                            <button class="btn btn-sm btn-outline-danger"
                                                    onclick="removeFromCart({{ item.id }})">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <script>
    function removeFromCart(itemId) {
        if (!confirm('Voulez-vous vraiment supprimer cet article du panier?')) {
            return;
        }

        fetch(`{{ path('app_cart_remove', {id: '__ID__'}) }}`.replace('__ID__', itemId), {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                // Reload the page to reflect changes
                window.location.reload();
            } else {
                alert('Erreur lors de la suppression');
            }
        })
        .catch(error => {
            console.error('Error:', error);
            alert('Erreur lors de la suppression');
        });
    }
    </script>
{% endblock %}
