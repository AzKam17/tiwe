{% extends 'base.html.twig' %}

{% block title %}Découvrez nos produits agricoles{% endblock %}

{% block body %}
    <div class="container py-4">
        {# Hero Section #}
        <div class="text-center mb-4">
            <h1 class="display-5 fw-bold mb-2">Produits Agricoles Frais</h1>
            <p class="text-muted">Découvrez notre sélection de produits locaux de qualité</p>
        </div>

        {# Search and Filter Bar #}
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <form method="get" action="{{ path('app_home') }}" class="row g-3">
                    {# Search Bar #}
                    <div class="col-md-6">
                        <div class="input-group input-group-lg">
                            <span class="input-group-text bg-white">
                                <i class="bi bi-search"></i>
                            </span>
                            <input
                                type="text"
                                name="search"
                                class="form-control"
                                placeholder="Rechercher un produit..."
                                value="{{ currentSearch }}"
                            >
                        </div>
                    </div>

                    {# Category Filter #}
                    <div class="col-md-4">
                        <select name="category" class="form-select form-select-lg">
                            <option value="0">Toutes les catégories</option>
                            {% for category in categories %}
                                <option value="{{ category.id }}" {% if currentCategory == category.id %}selected{% endif %}>
                                    {{ category.title }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>

                    {# Search Button #}
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-lg w-100">
                            <i class="bi bi-filter me-1"></i>
                            Filtrer
                        </button>
                    </div>
                </form>

                {# Active Filters #}
                {% if currentSearch or currentCategory > 0 %}
                    <div class="mt-3 d-flex gap-2 flex-wrap align-items-center">
                        <small class="text-muted">Filtres actifs:</small>
                        {% if currentSearch %}
                            <span class="badge bg-primary">
                                Recherche: "{{ currentSearch }}"
                                <a href="{{ path('app_home', {category: currentCategory}) }}" class="text-white ms-1">
                                    <i class="bi bi-x"></i>
                                </a>
                            </span>
                        {% endif %}
                        {% if currentCategory > 0 %}
                            {% for category in categories %}
                                {% if category.id == currentCategory %}
                                    <span class="badge bg-secondary">
                                        Catégorie: {{ category.title }}
                                        <a href="{{ path('app_home', {search: currentSearch}) }}" class="text-white ms-1">
                                            <i class="bi bi-x"></i>
                                        </a>
                                    </span>
                                {% endif %}
                            {% endfor %}
                        {% endif %}
                        <a href="{{ path('app_home') }}" class="btn btn-sm btn-outline-secondary">
                            <i class="bi bi-x-circle me-1"></i>
                            Réinitialiser
                        </a>
                    </div>
                {% endif %}
            </div>
        </div>

        {# Products Count #}
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h5 class="mb-0">
                <i class="bi bi-grid-3x3-gap me-2"></i>
                {{ products.getTotalItemCount }} produit(s) trouvé(s)
            </h5>
        </div>

        {# Products Grid #}
        {% include '_partials/_products/_grid.html.twig' %}

        {# Pagination #}
        {% if products.getTotalItemCount > 0 %}
            <div class="d-flex justify-content-center mt-4">
                {{ knp_pagination_render(products) }}
            </div>
        {% endif %}
    </div>
{% endblock %}
