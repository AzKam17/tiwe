{% extends 'base_dashboard.html.twig' %}

{% block title %}Enregistrer une entrée{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="mb-0">
            <i class="bi bi-search me-2"></i> Rechercher un produit
        </h1>
        <a href="{{ path('app_auth_products_home') }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-2"></i> Retour
        </a>
    </div>

    <p class="text-muted">Recherchez le produit que vous souhaitez ajouter à votre inventaire</p>

    <div class="card shadow-sm rounded">
        <div class="card-body">
            <div class="mb-4">
                <label for="productSearch" class="form-label fw-semibold">Rechercher un produit</label>
                <div class="input-group input-group-lg">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input
                        type="text"
                        class="form-control"
                        id="productSearch"
                        placeholder="Ex: Tomates, Oignons..."
                        autocomplete="off"
                        autofocus
                    >
                </div>
                <small class="text-muted d-block mt-2">
                    <i class="bi bi-lightbulb me-1"></i>
                    Commencez à taper pour voir les suggestions
                </small>
            </div>

            <div id="search-results">
                {% if suggestions is not empty %}
                    <div class="mb-3">
                        <h6 class="text-muted mb-3">
                            <i class="bi bi-clock-history me-1"></i>
                            Produits récents
                        </h6>
                    </div>
                    <div class="list-group">
                        {% for product in suggestions %}
                            <a
                                href="{{ path('app_inventory_entry_form', {productId: product.id}) }}"
                                class="list-group-item list-group-item-action product-item py-3"
                                data-turbo="false"
                            >
                                <div class="d-flex align-items-center">
                                    {% if product.images is not empty and product.images[0] is defined %}
                                        <img
                                            src="{{ product.images[0] }}"
                                            alt="{{ product.title }}"
                                            class="rounded me-3"
                                            style="width: 48px; height: 48px; object-fit: cover;"
                                            onerror="this.style.display='none';this.nextElementSibling.style.display='flex';"
                                        >
                                        <div class="rounded me-3 bg-light d-none align-items-center justify-content-center border" style="width: 48px; height: 48px;">
                                            <i class="bi bi-box-seam text-muted"></i>
                                        </div>
                                    {% else %}
                                        <div class="rounded me-3 bg-light d-flex align-items-center justify-content-center border" style="width: 48px; height: 48px;">
                                            <i class="bi bi-box-seam text-muted"></i>
                                        </div>
                                    {% endif %}

                                    <div class="flex-grow-1">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">
                                                    <i class="bi bi-box-seam me-1 text-muted"></i>
                                                    {{ product.title }}
                                                </h6>
                                                <div class="text-muted small">
                                                    {% if product.category %}
                                                        <i class="bi bi-tag me-1"></i>
                                                        {{ product.category.title }}
                                                    {% endif %}
                                                    {% if product.measurementUnit %}
                                                        <span class="ms-2">
                                                            <i class="bi bi-rulers me-1"></i>
                                                            {{ product.measurementUnit }}
                                                        </span>
                                                    {% endif %}
                                                </div>
                                            </div>
                                            <i class="bi bi-chevron-right text-muted"></i>
                                        </div>
                                    </div>
                                </div>
                            </a>
                        {% endfor %}
                    </div>
                {% else %}
                    <div class="text-center text-muted py-5">
                        <i class="bi bi-search fs-1 d-block mb-3 opacity-25"></i>
                        <p class="mb-0">Tapez le nom d'un produit pour commencer</p>
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="card-footer bg-light">
            <p class="text-muted small mb-0">
                <i class="bi bi-info-circle me-1"></i>
                Vous ne trouvez pas votre produit ?
                <a href="{{ path('app_auth_products_new') }}" class="text-primary">
                    Créer un nouveau produit
                </a>
            </p>
        </div>
    </div>

    <script>
        // Auto-search with debounce
        const searchInput = document.getElementById('productSearch');
        const resultsContainer = document.getElementById('search-results');
        let searchTimeout;
        let isSearching = false;

        // Store initial suggestions HTML
        const initialSuggestionsHTML = resultsContainer.innerHTML;

        searchInput.addEventListener('input', function(e) {
            clearTimeout(searchTimeout);
            const query = e.target.value.trim();

            if (query.length < 2) {
                // Restore initial suggestions
                resultsContainer.innerHTML = initialSuggestionsHTML;
                isSearching = false;
                return;
            }

            // Show loading state
            isSearching = true;
            resultsContainer.innerHTML = `
                <div class="text-center text-muted py-5">
                    <div class="spinner-border" role="status">
                        <span class="visually-hidden">Recherche...</span>
                    </div>
                    <p class="mb-0 mt-3">Recherche en cours...</p>
                </div>
            `;

            searchTimeout = setTimeout(() => {
                fetch(`{{ path('app_inventory_entry_search_results') }}?q=${encodeURIComponent(query)}`)
                    .then(response => response.text())
                    .then(html => {
                        resultsContainer.innerHTML = html;
                    })
                    .catch(error => {
                        resultsContainer.innerHTML = `
                            <div class="alert alert-danger">
                                <i class="bi bi-exclamation-triangle me-2"></i>
                                Une erreur est survenue lors de la recherche.
                            </div>
                        `;
                    });
            }, 300);
        });
    </script>

    <style>
        .product-item {
            transition: background-color 0.15s;
        }
        .product-item:hover {
            background-color: #f8f9fa;
        }
    </style>
{% endblock %}
